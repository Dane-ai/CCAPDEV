<h1 class="dispaly-6 fw-bold text-center my-4">All Users</h1>
<table class="table table-hover table-borderless">
  <thead class="table-light">
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Email</th>
      <th>Reference NOs.</th>
      <th>Password</th>
      <th>
        <div class="float-end">
          <a href="/users/add" class="btn btn-sm btn-success">+ Add</a>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.username}}</td>
      <td>{{this.role}}</td>
      <td>{{this.email}}</td>
      <td>{{this.referenceNums}}</td>
      <td>{{this.password}}</td>
      <td>
        <form action="/users/delete/{{this._id}}" method="post">
          <a href="/users/edit/{{this._id}}" class="btn btn-sm btn-link">Edit</a>
          <button type="submit" class="btn btn-sm btn-outline-danger">
            DEL
          </button>
        </form>
      </td>
    </tr>

    {{/each}}
  </tbody>
</table>